<UserControl x:Class="MultiMediaPlayer.App.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mmp="clr-namespace:MultiMediaPlayer;assembly=MultiMediaPlayer"
    Width="400" Height="300" xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows">
    <Grid x:Name="LayoutRoot" Background="White">
    		<mmp:SliderGauge VerticalAlignment="Top" Height="20" x:Name="Gauge" Percentage="0.25" PercentChanged="SliderGauge_PercentChanged" DownloadPercentage="0.75"></mmp:SliderGauge>
			<mmp:SliderDownloadGauge Height="20" x:Name="SGauge" Percentage="0.3" DownloadPercentage="0.6"></mmp:SliderDownloadGauge>


	</Grid>
</UserControl>
